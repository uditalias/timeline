{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es5",
    "sourceMap": false,
    "lib": ["es6", "dom"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "./lib"]
}
